[options]
record_movie = false
do_plot = true
pause_after_init = false
plot_each_iter = 10

[model]
N = 360 # 2*2*2*3*3*5
L = "2Ï€"
M = 0.0
c0 = 0
mu = 1e-1

[model.stiffness]
key = "exponential"

[model.stiffness.parameters.constant]
c = 2.0

[model.stiffness.parameters.double_well]
c = 1.2
offset = 0.0
linear_slope = 0.0

[model.stiffness.parameters.quadratic]
offset = 0.0
c = 1.0

[model.stiffness.parameters.exponential]
offset = 0.0
exponent = -1
c = 0.0

[solver]
atol                = 1e-9
rtol                = 1e-13
max_iter            = 15000
step_size           = 1e-1
adapt               = true
min_step_size       = 1e-4
max_step_size       = 1e0
step_down_threshold = 1e-1
step_up_threshold   = 1e-3
step_factor         = 1.4

[initial_data]
type = "star"
r_key = "default"
rho_phase = 0.1
rho_amplitude = 0.1

